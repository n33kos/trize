{
  "name": "trize",
  "version": "0.4.0",
  "description": "A library for drawing and manipulating Canvas2D triangles",
  "main": "dist/trize.node.js",
  "scripts": {
    "build": "webpack",
    "deploy": "npm run build && npm run document",
    "document": "./document.sh",
    "serve": "http-server",
    "watch": "npm-watch"
  },
  "author": "n33kos",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "http-server": "^0.11.2",
    "jsdoc-to-markdown": "^4.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3"
  },
  "dependencies": {
    "npm-watch": "^0.4.0",
    "uuid": "^3.3.2"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": false
    }
  }
}
